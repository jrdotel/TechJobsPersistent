@model TechJobsPersistent.ViewModels.AddJobViewModel;

<h1>Add a Job</h1>
<br />

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label asp-for="Name"><b>Name</b></label>
        <input asp-for="Name" class="form-control" />
        <span></span>
    </div>
    <br />

    <div class="form-group">
        <label asp-for="EmployerId"><b>Employer</b></label>
        </br>
        <select asp-for="EmployerId" asp-items="@Model.Employers"></select>
    </div>

    <div class="form-group">
        <a asp-controller="Employer" asp-action="Add">Add Employer</a>
    </div>
    <br />

    @*<div class="form-group">
        <label><b>Skill</b></label>
        <span></span>
    </div>*@

    <div class="form-group">
        <label><b>Skill</b></label>
        <br />
        @foreach (var skill in Model.Skills)
        {
            <input type="checkbox" name="selectedSkills" value="@skill.Id" />
            <label for="@skill.Id">@skill.Name</label>
            <br />
        }
    </div>

    <div class="form-group">
        <a asp-controller="Skill" asp-action="Add">Add Skill</a>
    </div>
    <br />
    <input type="submit" value="Add Job" />
</form>